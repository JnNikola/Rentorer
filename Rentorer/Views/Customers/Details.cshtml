@model Rentor.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<h2>@Model.Name</h2>

<ul>
    
    <li><h4>ID: @Model.Id</h4></li>
    <li><h4>Membership Type: @Model.MembershipTypeType.Name</h4></li>

    @if (@Model.Birthday.HasValue)
    {
        <li><h4>Birthday: @Model.Birthday.Value.ToShortDateString()</h4></li>
    }

</ul>

